<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>LojaBrinquedo</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>ServletBrinquedo</servlet-name>
    <servlet-class>br.web.ServletBrinquedo</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ServletBrinquedo</servlet-name>
    <url-pattern>/ServletBrinquedo</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ServletCategorias</servlet-name>
    <servlet-class>br.web.ServletCategorias</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ServletCategorias</servlet-name>
    <url-pattern>/ServletCategorias</url-pattern>
  </servlet-mapping>
  
</web-app>